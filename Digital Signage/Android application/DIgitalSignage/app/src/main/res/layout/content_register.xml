<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.bit.kakkr1.digitalsignage.Register"
    android:background="#303030">


    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/editfname"
        android:background="#ba7474"
        android:fontFamily="sans-serif-thin"
        android:textSize="20sp"
        android:textColor="#000"
        android:hint="First Name"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editlname"
        android:layout_alignStart="@+id/editlname" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/editlname"
        android:background="#e963799b"
        android:hint="Last Name"
        android:fontFamily="sans-serif-thin"
        android:textSize="20sp"
        android:textColor="#000"
        android:ems="10"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editfname"
        android:layout_alignLeft="@+id/btnSubmit"
        android:layout_alignStart="@+id/btnSubmit" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#776e6e"
        android:layout_below="@+id/editlname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/iconapp"
        android:layout_above="@+id/editfname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Bluetooth registers with submit."
        android:fontFamily="sans-serif-thin"
        android:textSize="12sp"
        android:textColor="#fff"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_below="@+id/editlname"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
